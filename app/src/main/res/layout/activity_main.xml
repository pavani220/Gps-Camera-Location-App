<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Heading for the app -->
    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient_background"
        android:text="GPS Camera App"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Only the take photo button is visible initially -->
    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_heading"
        android:layout_marginTop="30dp" />

    <!-- ImageView for the captured photo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/button_take_photo"
        android:layout_marginTop="30dp"
        android:visibility="gone" />

    <!-- Latitude TextView, centered horizontally -->
    <TextView
        android:id="@+id/textView_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="Latitude: "
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="gone" />

    <!-- Longitude TextView, centered horizontally -->
    <TextView
        android:id="@+id/textView_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_latitude"
        android:text="Longitude: "
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <!-- Location TextView, centered horizontally -->
    <TextView
        android:id="@+id/textView_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_longitude"
        android:text="Location: "
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <!-- Add margin for space below location TextView -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" /> <!-- Space added here -->

    <!-- Initially hide the Google Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textView_location"
        android:layout_marginTop="50dp"
        android:visibility="gone" /> <!-- Initially hidden -->

</RelativeLayout>
